<!DOCTYPE html>
<html>
  <head>
    <title>Tictactoe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <%= notice %>
    <% end %>

    <% if alert %>
      <%= alert %>
    <% end %>

    <% if session[:user_id] %>
      <%= User.find(session[:user_id]).email %>
    <% end %>


    <%= yield %>
  </body>
</html>
